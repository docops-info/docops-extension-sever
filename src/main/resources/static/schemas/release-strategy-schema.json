{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docops.io/extensions/schemas",
  "title": "Release Strategy Schema",
  "description": "This is the schema for release strategies",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "releases": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "lines": {
              "type": "array",
              "items": [
                {
                  "type": "string"
                }
              ]
            },
            "date": {
              "type": "string"
            },
            "selected": {
              "type": "boolean"
            },
            "goal": {
              "type": "string"
            }
          },
          "required": [
            "type",
            "lines",
            "date",
            "selected",
            "goal"
          ]
        }
      ]
    },
    "style": {
      "type": "string",
      "enum": ["TL", "R", "TLG"]
    }
  },
  "required": [
    "title",
    "releases",
    "style"
  ]
}