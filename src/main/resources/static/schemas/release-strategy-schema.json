{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docops.io/extensions/schemas",
  "title": "Release Strategy Schema",
  "description": "This is the schema for release strategies",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "releases": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["M1", "M2","M3","M4","M5","M6","M7","M8","M9","RC1","RC2","RC3","RC4","RC5","RC6","RC7","RC8","RC9","GA"]
            },
            "lines": {
              "type": "array",
              "items": [
                {
                  "type": "string"
                }
              ]
            },
            "date": {
              "type": "string"
            },
            "selected": {
              "type": "boolean"
            },
            "goal": {
              "type": "string"
            },
            "completed": {
              "type": "boolean"
            }
          },
          "required": [
            "type",
            "lines",
            "date",
            "selected",
            "goal",
            "completed"
          ]
        }
      ]
    },
    "style": {
      "type": "string",
      "enum": ["TL", "TLS","R", "TLG"]
    },
    "scale": {
      "type": "number"
    },
    "displayConfig": {
      "type": "object",
      "properties": {
        "colors": {
          "type": "array",
          "items":
          {
            "type": "string"
          },
          "minItems": 3,
          "maxItems": 3,
          "uniqueItems": true
        },
        "fontColor": {
          "type": "string"
        },
        "milestoneColor": {
          "type": "string"
        },
        "circleColors": {
          "type": "array",
          "items":
          {
            "type": "string"
          },
          "minItems": 3,
          "maxItems": 3,
          "uniqueItems": true
        },
        "carColors": {
          "type": "array",
          "items":
          {
            "type": "string"
          },
          "minItems": 3,
          "maxItems": 3,
          "uniqueItems": true
        }
      }
    }

  },
  "required": [
    "title",
    "releases",
    "style",
    "scale"
  ]
}